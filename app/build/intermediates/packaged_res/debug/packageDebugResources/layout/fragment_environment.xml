<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="20dp">


    <ImageButton
        android:id="@+id/btnOpenMenu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:src="@android:drawable/ic_menu_sort_by_size"
        android:contentDescription="Menu"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="28dp" />

    <!-- Center content -->
    <LinearLayout
        android:id="@+id/centerContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.55">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Environment"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#222222" />


        <View
            android:layout_width="64dp"
            android:layout_height="2dp"
            android:background="#EEEEEE"
            android:layout_marginTop="12dp" />

        <!-- Temperature row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="18dp"
            android:padding="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivTemperatureStatus"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@android:drawable/ic_menu_info_details"
                app:tint="#4CAF50" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:id="@+id/tvTemperatureLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temperature"
                    android:textSize="14sp"
                    android:textColor="#555555" />

                <TextView
                    android:id="@+id/tvTemperatureValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- Â°C"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#222222" />
            </LinearLayout>
        </LinearLayout>

        <!-- Light row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivLightStatus"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@android:drawable/ic_menu_day"
                app:tint="#FFC107" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:id="@+id/tvLightLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Light"
                    android:textSize="14sp"
                    android:textColor="#555555" />

                <TextView
                    android:id="@+id/tvLightValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- lx"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#222222" />
            </LinearLayout>
        </LinearLayout>

        <!-- Proximity row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivProximityStatus"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@android:drawable/ic_menu_info_details"
                app:tint="#2196F3" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:id="@+id/tvProximityLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Proximity"
                    android:textSize="14sp"
                    android:textColor="#555555" />

                <TextView
                    android:id="@+id/tvProximityValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- cm"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#222222" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvLastUpdated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last updated: --"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enable Alerts"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_marginEnd="8dp" />

            <Switch
                android:id="@+id/switchEnableAlerts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvSmallHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monitoring temperature, light and proximity"
            android:textSize="13sp"
            android:textColor="#999999"
            android:layout_marginTop="18dp" />

        <Button
            android:id="@+id/btnShowAlerts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Alerts History"
            android:layout_marginTop="12dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
