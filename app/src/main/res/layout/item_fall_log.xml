<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="14dp"
    android:paddingBottom="14dp">

    <TextView
        android:id="@+id/tvLogType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONFIRMED FALL"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#222222" />

    <TextView
        android:id="@+id/tvLogTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2025-01-01 12:00"
        android:textSize="13sp"
        android:textColor="#777777"
        android:layout_marginTop="2dp" />

    <TextView
        android:id="@+id/tvLogG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Peak G: 3.10"
        android:textSize="14sp"
        android:textColor="#333333"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tvLogLoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location: N/A"
        android:textSize="13sp"
        android:textColor="#555555"
        android:layout_marginTop="2dp" />

    <TextView
        android:id="@+id/tvLogFlags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SMS sent: No â€¢ Cancelled: No"
        android:textSize="12sp"
        android:textColor="#999999"
        android:layout_marginTop="6dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="14dp"
        android:background="#EEEEEE" />

</LinearLayout>
