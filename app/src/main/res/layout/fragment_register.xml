<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Back -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back"
            android:contentDescription="Back"
            android:padding="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvRegisterTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create account"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/btnBack"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvRegisterSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fill your information"
            android:textSize="14sp"
            android:textColor="#777777"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvRegisterTitle"
            app:layout_constraintStart_toStartOf="@id/tvRegisterTitle" />

        <!-- Avatar -->
        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/user_import"
            android:contentDescription="Avatar"
            android:clickable="true"
            app:layout_constraintTop_toBottomOf="@id/tvRegisterSubtitle"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Form -->
        <LinearLayout
            android:id="@+id/formContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/ivAvatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Username -->
            <TextView
                android:text="Username"
                android:textSize="13sp"
                android:textColor="#777777"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:paddingVertical="6dp"
                android:textSize="15sp"
                android:textColor="#222222"/>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#DDDDDD"/>

            <!-- Email -->
            <TextView
                android:text="Email"
                android:textSize="13sp"
                android:textColor="#777777"
                android:layout_marginTop="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:paddingVertical="6dp"
                android:textSize="15sp"
                android:textColor="#222222"
                android:inputType="textEmailAddress"/>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#DDDDDD"/>

            <!-- Phone -->
            <TextView
                android:text="Phone number"
                android:textSize="13sp"
                android:textColor="#777777"
                android:layout_marginTop="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:paddingVertical="6dp"
                android:textSize="15sp"
                android:textColor="#222222"
                android:inputType="phone"/>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#DDDDDD"/>

            <!-- DOB -->
            <TextView
                android:text="Date of birth (YYYY-MM-DD)"
                android:textSize="13sp"
                android:textColor="#777777"
                android:layout_marginTop="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etDob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:focusable="false"
                android:clickable="true"
                android:cursorVisible="false"
                android:paddingVertical="6dp"
                android:textSize="15sp"
                android:textColor="#222222"
                android:inputType="none"/>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#DDDDDD"/>

            <!-- Password -->
            <TextView
                android:id="@+id/tPassword"
                android:text="Password"
                android:textSize="13sp"
                android:textColor="#777777"
                android:layout_marginTop="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:paddingVertical="6dp"
                android:textSize="15sp"
                android:textColor="#222222"
                android:inputType="textPassword"/>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#DDDDDD"/>

        </LinearLayout>

        <!-- Create -->
        <Button
            android:id="@+id/btnCreate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Create account"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="#222222"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/formContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>