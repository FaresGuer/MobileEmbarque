<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="20dp">

    <!-- Top left: Menu -->
    <ImageButton
        android:id="@+id/btnOpenMenu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Menu"
        android:padding="8dp"
        android:src="@android:drawable/ic_menu_sort_by_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="18dp"/>

    <!-- Top right: Logs -->
    <ImageButton
        android:id="@+id/btnLogs"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="28dp"
        android:background="@android:color/transparent"
        android:padding="6dp"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/file"
        app:tint="@android:color/black" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heart rate"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#222222"
        app:layout_constraintTop_toBottomOf="@id/btnOpenMenu"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="14dp"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place your finger on the camera and flash."
        android:textSize="13sp"
        android:textColor="#777777"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="@id/tvTitle"
        android:layout_marginTop="6dp"/>

    <!-- Preview with subtle border -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_preview_border"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- BPM -->
    <TextView
        android:id="@+id/tvBpm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#222222"
        app:layout_constraintTop_toBottomOf="@id/previewView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="18dp"/>

    <TextView
        android:id="@+id/tvBpmLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BPM"
        android:textSize="13sp"
        android:textColor="#777777"
        app:layout_constraintStart_toStartOf="@id/tvBpm"
        app:layout_constraintTop_toBottomOf="@id/tvBpm"
        android:layout_marginTop="2dp"/>

    <!-- Quality aligned to the right of BPM -->
    <TextView
        android:id="@+id/tvQuality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quality --"
        android:textSize="13sp"
        android:textColor="#777777"
        app:layout_constraintBaseline_toBaselineOf="@id/tvBpmLabel"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Virtual mode row -->
    <View
        android:id="@+id/divider1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        app:layout_constraintTop_toBottomOf="@id/tvBpmLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvVirtualLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Virtual mode"
        android:textSize="14sp"
        android:textColor="#222222"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="14dp"/>

    <Switch
        android:id="@+id/swVirtual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/tvVirtualLabel"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Start button -->
    <Button
        android:id="@+id/btnStart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Start"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:backgroundTint="#222222"
        android:layout_marginBottom="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
